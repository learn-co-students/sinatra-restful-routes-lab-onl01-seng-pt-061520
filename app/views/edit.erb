<h1>Edit your recipe</h1>

<form class="" action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p><label for="name">Name: </label><input type="text" name="name" value="<%= @recipe.name %>"></p>
  <p><label for="Ingredients">Ingredients: </label><input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></p>
  <p><label for="cook_time">Cook Time: </label><input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></p>
  <p><input type="submit" name="submit" value="Edit Your Recipe"></p>
</form>
